%div{itemtype: "https://schema.org/Recipe", itemscope: true}

  %h1{itemprop: "name"}= @cocktail.name
  %meta{itemprop: "datePublished", content: @cocktail.created_at}

  - if @scale
    %h4 Recipe is scaled #{@scale}x

  %ul
    - @cocktail.recipe_items.sort.each do |item|
      %li{itemprop: "recipeIngredient"}= html_fractions(item.summary)

  %p{itemprop: "recipeInstructions"}= @cocktail.full_technique.capitalize + '.'

  - if @cocktail.notes.present?
    %div{itemprop: "description"}= simple_format(auto_link(@cocktail.notes))

= link_to 'Edit', edit_cocktail_path(@cocktail)

- content_for :secondary_content do
  - if flash[:show_new_cocktail_button]
    %p= new_cocktail_link

  %h2 Scale this recipe
  = semantic_form_for :scaler do |f|
    = f.inputs do
      = f.input :scale, label: 'Scaling factor'
