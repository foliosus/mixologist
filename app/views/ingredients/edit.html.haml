- page_title "Edit #{@ingredient.name}"

= semantic_form_for(@ingredient) do |f|
  = render 'form', f: f
  = f.actions do
    = f.action :submit, label: 'Save your changes'

- if @cocktails.present?
  - content_for :secondary_content do
    %h3 Cocktails with #{@ingredient.name}
    %ul
      - @cocktails.each do |cocktail|
        %li= link_to cocktail.name, cocktail
