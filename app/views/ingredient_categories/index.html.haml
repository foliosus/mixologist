- page_title 'Ingredient Categories'

%table
  %thead
    %tr
      %th Name
      %th
  %tbody
    - @ingredient_categories.each do |ingredient_category|
      %tr
        %td= link_to ingredient_category.name, edit_ingredient_category_path(ingredient_category)
        %td= link_to Icon.new(:trash), ingredient_category, data: {confirm: 'Are you sure?', method: :delete}, :'aria-hidden' => true

- content_for :secondary_content do
  %p= link_to "#{Icon.new(:add)} Add a category".html_safe, new_ingredient_category_path, class: 'call_to_action'
